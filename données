const db = firebase.firestore();

// Récupérer tous les documents de la collection "locataires"
db.collection("locataires").get().then((querySnapshot) => {
    querySnapshot.forEach((doc) => {
        console.log(doc.id, " => ", doc.data());
        // Ici, doc.id est l'ID du document et doc.data() est un objet contenant les données du document
    });
}).catch((error) => {
    console.error("Erreur lors de la récupération des documents : ", error);
});
